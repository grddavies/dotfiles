#!/bin/bash

set -euo pipefail


if  ! command -v brew &> /dev/null; then
    # Requires brew command
    exit 1
fi

# Applications
{{ $casks := list
     "audacity"
     "blackhole-16ch"
     "brave-browser"
     "openvpn-connect"
     "dropbox"
     "inkscape"
     "openvpn-connect"
     "rekordbox"
     "signal"
     "spotify"
     "the-unarchiver"
     "transmission"
     "vcv-rack"
     "vlc"
     "whatsapp"
     "xld" -}}


brew bundle --file=/dev/stdin <<EOF
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
